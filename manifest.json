{
    "manifest_version": 3,
    "name": "cross-request",
    "description": "YApi 跨域请求",
    "version": "3.1",
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["index.js"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["response.js"],
            "all_frames": true
        }
    ]
}